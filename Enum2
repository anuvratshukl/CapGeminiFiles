package com.xyz;

public class Enum3 {  
	  
enum Position{  
  
Reema("Panda"),Himanshu("Bhardwaj"),Geetanjali("Sharma");  
  
      String lName;  
  
Position(String s){  
  
lName=s;  
    }  
  
    String showPosition(){  
  
return lName;  
    }  
 }  
  
public static void main(String[] args) {  
  
for(Position pos : Position.values()){  
  
int val = pos.ordinal();  
  
System.out.println("First name = "+pos+"\nLast name = "+pos.showPosition() +"\nPosition in class = "+val );  
  
System.out.println();  
        }  
    }  
}  
Output:-

First name = Reema
Last name = Panda
Position in class = 0

First name = Himanshu
Last name = Bhardwaj
Position in class = 1

First name = Geetanjali
Last name = Sharma
Position in class = 2

